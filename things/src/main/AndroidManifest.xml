<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="iot.hello.com.helloiot">

  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>
  <uses-permission android:name="com.google.android.things.permission.USE_PERIPHERAL_IO"></uses-permission>
  <uses-permission android:name="ccom.google.android.things.permission.MANAGE_INPUT_DRIVERS"></uses-permission>
  <uses-permission android:name="com.google.android.things.permission.MANAGE_INPUT_DRIVERS" />
  <uses-permission android:name="com.google.android.things.permission.MANAGE_SENSOR_DRIVERS" />
  <uses-permission android:name="com.google.android.things.permission.USE_PERIPHERAL_IO"/>
  <application>
    <uses-library android:name="com.google.android.things"/>

    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.IOT_LAUNCHER"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
  </application>

</manifest>